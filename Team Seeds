#include <Servo.h> ;
Servo Frontwheels;
Servo PipeHoleMaker;
Servo Flap;
int forward = 15;
int pos = 90;
int length = 20;
int width = 20;
int cnt = 0;
const int sens = 8;
int cm = sens;
int time = millis ();

void setup()
{
  pinMode(10, OUTPUT);
  pinMode(13, OUTPUT);
  pinMode(11,OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(3,OUTPUT);
  pinMode(4,OUTPUT);
  pinMode(1,OUTPUT);
  pinMode(5,OUTPUT);
  Frontwheels.attach (13);
  PipeHoleMaker.attach (11);
  Flap.attach (10);
  Frontwheels.write (0);
  PipeHoleMaker.write (0);
  Flap.write(0);
}

void loop ()
{
  for (int rotations = 0; rotations <= 20; rotations += 1)
  {
  digitalWrite(3, HIGH); // This loop 
  delay(1000);
  digitalWrite(3, LOW);
  delay(300);
  digitalWrite(5, HIGH);
  delay (1000);
  digitalWrite(5, LOW);
  delay(500);
  PipeHoleMaker.write(180);
  delay (1000);
  PipeHoleMaker.write(0);
  delay(1000);
  Flap.write(pos);
  delay (1000);
  Flap.write (0);
  
  }
  
}
