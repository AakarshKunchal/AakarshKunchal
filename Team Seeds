#include <Servo.h> ;
Servo Frontwheels; // servo setup
Servo PipeHoleMaker;
Servo Flap;
int forward = 15; // some integers
int pos = 90;
int length = 20;
int width = 20;
int cnt = 0;
const int sens = 8;
int cm = sens;
int time = millis ();

int cm = 0;

long readUltrasonicDistance(int triggerPin, int echoPin)
{
  pinMode(triggerPin, OUTPUT);  // Clear the trigger
  digitalWrite(triggerPin, LOW);
  delayMicroseconds(2);
  // Sets the trigger pin to HIGH state for 10 microseconds
  digitalWrite(triggerPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(triggerPin, LOW);
  pinMode(echoPin, INPUT);
  // Reads the echo pin, and returns the sound wave travel time in microseconds
  return pulseIn(echoPin, HIGH);
}

void setup()
{
  Serial.begin(9600);
  pinMode(10, OUTPUT);// pinmodes
  pinMode(13, OUTPUT);
  pinMode(11,OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(3,OUTPUT);
  pinMode(4,OUTPUT);
  pinMode(1,OUTPUT);
  pinMode(5,OUTPUT);
  Frontwheels.attach (13); // servo attachment declaration
  PipeHoleMaker.attach (11);
  Flap.attach (10);
  Frontwheels.write (90);
  PipeHoleMaker.write (0);
  Flap.write(0);
}

void loop ()
{ 
  Frontwheels.write (90);// servo setting angle
  delay(500);
  
   cm = 0.01723 * readUltrasonicDistance(7, 7);
  // convert to inches by dividing by 2.54
  inches = (cm / 2.54);
  Serial.print(inches);
  Serial.print("in, ");
  Serial.print(cm);
  Serial.println("cm");
  delay(100); // Wait for 100 millisecond(s)
  
  if (cm >=101)// ultrasonic 1st command
  {
  digitalWrite(6, LOW); // 0 voltage passing to the buzzer
    
  for (int rotations = 0; rotations <= 2; rotations += 1)// to start 'for' loop
  {
  digitalWrite(3, HIGH); // This loop is for the 1st lane out of 20
  delay(1000); //The loop starts a cycle for the process of sowing the seed
  digitalWrite(3, LOW); // Wheel movement
  delay(300);
  digitalWrite(5, HIGH);// Quadrant movement
  delay (1000);
  digitalWrite(5, LOW);
  delay(500);
  PipeHoleMaker.write(180); // pipe hole  movement
  delay (1000);
  PipeHoleMaker.write(0);
  delay(3000);
  Flap.write(pos); // flap movement
  delay (1000);
  Flap.write (0);

 } //end of loop
  Frontwheels.write(45); // This loop is for turning
  digitalWrite(3, HIGH); // To enter the second lane
  delay(1000);
  Frontwheels.write(90); //To reset the position of the servo
  digitalWrite(3, LOW); // To stop it from turning
 for (int rotations = 0; rotations <= 20; rotations += 1)// to start 'for' loop
  {
  digitalWrite(3, HIGH); // This loop is for the 2nd lane out of 20
  delay(1000); //The loop starts a cycle for the process of sowing the seed
  digitalWrite(3, LOW); // Wheel movement
  delay(300);
  digitalWrite(5, HIGH);// Quadrant movement
  delay (1000);
  digitalWrite(5, LOW);
  delay(500);
  PipeHoleMaker.write(180); // pipe hole  movement
  delay (1000);
  PipeHoleMaker.write(0);
  delay(1000);
  Flap.write(pos); // flap movement
  delay (1000);
  Flap.write (0);

 } //end of loop
  Frontwheels.write(135); // This loop is for turning
  digitalWrite(3, HIGH); 
  delay(3000);
  Frontwheels.write(90);
  digitalWrite(3, LOW); // To enter the third lane
} // end of turning loop
}
if (cm <=100)//if distance is too less
{
  Frontwheels.write (90);
  PipeHoleMaker.write (0);
  Flap.write(0);
  digitalWrite(3, LOW); // to stop other functions except the buzzer
  digitalWrite(5, LOW);
  digitalWrite(6, HIGH);
}
// this whole thing is a complete loop
